@model UserInputModel

<div class="d-flex flex-column m-3">
    <div class="d-flex flex-column" id="userInputForm">
        <div class="form-group">
            <label asp-for="Email" class="col-form-label"></label>
            <div >
                <input asp-for="Email" class="form-control"/>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Password" class="col-form-label"></label>
            <div >
                <input asp-for="Password" class="form-control"/>
            </div>
        </div>
    </div>
    <div class="d-flex flex-column mt-4">
        <div class="d-flex flex-column justify-content-around align-items-center">
            <div class="d-grid gap-2 w-50">
                <input class="btn btn-success" type="submit" value="Apply"/>
            </div>
            <div class="d-grid gap-2 w-50 mt-1">
                <a class="btn btn-primary" asp-action="GoogleLogin">Login with Google</a>
            </div>
        </div>
        <div class="mt-2">
            @Html.ValidationSummary()
        </div>
    </div>
</div>

